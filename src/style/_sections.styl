.section {
  position: relative;
  width: 100%;
  min-height: 100vh;

  .description {
    position: relative;
    padding: 2rem 1.4rem;
    width: 30em;
    margin: auto;
    h1 {
      font-size: 2rem;
    }
    p {
      padding: 1rem;
      font-size: 1.2rem;
    }
  }
}

.section--intro {
  overflow: hidden;
}

.section--about {
  background: introBg;
  padding: .4em 0 4em 0;
  display: inline-block;
  p {
    width: 80%;
    padding: 4em;
    padding-bottom: 0;
    margin: auto;
    color: #fff;
    font-size: 2em;
  }
  strong {
    color: #E14756;
    text-transform: uppercase;
  }

  .devices {
    width: 80%;
    height: 15em;
    margin: auto;
    padding-top: 5em;
    margin-bottom: 4em;
    .device {
      height: 100%;
      width: 33.3%;
      margin: 4em 0;
      text-align: center;
      float: left;

      h4 {
        color: #f0f0f0;
        margin-top: 1em;
      }
      svg {
        height: 100%;
        path {
          stroke: #f0f0f0;
          stroke-width: .5px;
        }
      }
    }
  }
}

.section--obus {
  display: flex;
  .description {
    background: alpha(introBg, .9);
    color: #f0f0f0;
    p {
      font-size: .8em;
    }
    svg {
      width: 50%;
      margin: auto;
      display: block;
    }
  }
  .slideshow {
    margin: auto;
    absolute: top 0 left 0;
    size: 100%;
    overflow: hidden;
    &:after {
      content: '';
      absolute: top 0 left 0;
      size: 100%;
      background-color: #3D7EDB;
      mix-blend-mode: multiply;
      background-image: radial-gradient(rgba(0,0,0,.2) 20%, transparent 20%);
      background-size: 6px 6px;
    }
    .slide {
      display: block;
      absolute: top 0 left 0;
      size: 100%;
    }
  }
}

@media only screen and (min-width: 320px) and (max-width: 480px) {
  .section--about {
    p {
      padding: 0;
      font-size: 1.8em;
    }
    .devices {
      padding-top: 1rem;
      .device {
        width: 50%;
        padding: 0 3em;
        h4 {
          margin-top: .5em;
          font-size: 1.4em;
        }
      }
      svg {
        height: auto;
        width: 100%;
      }
    }
  }

  .description {
    width: 100%;
    p:nth-of-type(n+2) {
      display: none;
    }
  }

  .slideshow div {
    position fixed
    will-change: background
    transform: translateZ(-1px);
    background-size: 100%;
  }

  .pango-logo-group {
    transform: scale(.6);
  }

  .section--about {
    font-size: .5rem;
  }
}
