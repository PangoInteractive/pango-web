.section {
  position: relative;
  width: 100%;
  min-height: 100vh;
}

.brand-logo {
  width: 30%;
  display: block;
  width: 960px
  padding: 2em 20em;
  background: #fff;
}

.wrapper {
  margin: auto;
  width: 960px;
  position: relative;
}

.project-details {
  overflow: hidden;
  position: relative;
  z-index: 9;
}

.description {
  position: relative;
  display: flex;
  flex-direction: column;
  background: alpha(introBg, .9);
  padding: 2rem 1.4rem;
  width: 50%;
  min-height: 520px;
  color: #f0f0f0;
  h1 {
    width: 100%;
    text-align: center;
    font-size: 1.4em;
    padding-top: 1em;
  }
  p {
    padding: 1em;
    font-size: .9em;
    &:nth-of-type(n+2) {
      display: none;
    }

    &:last-of-type {
      display: block;
    }
  }

  &.more p:nth-of-type(n+2) {
    display: block;
  }
}

.button--view-project {
  background: #fff;
  color: introBg;
  padding: .4em 1em;
  margin: auto;
  display: block;
}
.hide {
  display: none;
}

.section {
  &.section--intro {
    overflow: hidden;
  }
  &.section--about {
    z-index: 9;
  }
}

