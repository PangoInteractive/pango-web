.section--portfolio {
  text-align: center;
  padding-top: 5em;
  min-height: 0;
  h1 {
    line-height: 1;
    margin: 0;
    font-size: 7em;
    font-weight: 200;
    text-transform: uppercase;
    color: introBg;
    span {
      display: inline-block;
    }
  }

  .wrapper {
    overflow: hidden;
    border-radius: 0;
  }

  // animation elements
  .square-portfolio-animation {
    absolute: bottom 0 left 0;
    size: 100% .1em;
    background: introBg;
    transform: scaleX(0);
    transform-origin: 0 50%;
  }
}

.section--about {
  background: introBg;
  padding: .4em 0 4em 0;
  p {
    width: 80%;
    padding: 4em;
    padding-bottom: 0;
    margin: auto;
    color: #fff;
    font-size: 2em;
  }
  strong {
    color: #E14756;
    text-transform: uppercase;
  }

  .devices {
    width: 80%;
    height: 15em;
    margin: auto;
    padding-top: 5em;
    margin-bottom: 4em;
    .device {
      height: 100%;
      width: 33.3%;
      margin: 4em 0;
      text-align: center;
      float: left;

      h4 {
        color: #f0f0f0;
        margin-top: 1em;
      }
      svg {
        height: 100%;
        path {
          stroke: #f0f0f0;
          stroke-width: .5px;
        }
      }
    }
  }
}

.slideshow {
  size: 100%;
  z-index: -1;
  absolute: top 0 left 0;
  &:after {
    content: '';
    absolute: top 0 left 0;
    size: 100%;
    //mix-blend-mode: multiply;
    background-image: radial-gradient(rgba(0,0,0,.2) 20%, transparent 20%);
    background-size: 5px 5px;
  }
  .slide {
    will-change: opacity;
    transform: translateZ(0);
    display: block;
    absolute: top 0 left 0;
    min-height: 100%;
    min-width: 100%;
  }
}

.section--contact {
  min-height: 0;
}
colors = #873158, #A83956, #C34057, #E14756;
.contact-form {
  position: relative;
  padding: 1em;
  margin: auto;
  margin-top: 8em;
  width: 30em;
  border: 1px solid rgba(0,0,0,.2);
  // :after and :before pseudo-elements are used by clearfix
  // so we need to add a extra element :(
  .borders {
    &:before {
      content: '';
      display: block;
      absolute: left -1px bottom 100%;
      padding: 0 1px;
      box-sizing: content-box;
      size: 100% .2em;
      background: colors[0];
      background: linear-gradient(
        to right,
        colors[0] 0%,
        colors[1] 25%,
        colors[2] 50%,
        colors[3] 75%
      );
    }
  }
}
.contact-form__input {
  border: .1em solid rgba(0,0,0,.1);
  display: block;
  margin-bottom: 1em;
  padding: 1em;
  width: 100%;
  &:focus {
    outline: .1em solid colors[1];
  }
}
.contact-form__submit-btn {
  padding: .4em 1.4em;
  color: #fff;
  //background: #02C39A;
  background: colors[2];
  float: right;
}

