@media only screen and (max-width: 960px) {
  .section {
    width: 100%;
    p {
      padding: 0;
      width: 70%;
      margin: auto;
    }
    .brand-logo {
      width: 100%;
      padding: 2em 4em;
      max-height: 20em;
    }
    .wrapper {
      width: 100%;
      .description {
        width: 100%;
      }
    }
  }
}

@media only screen and (min-width: 320px) and (max-width: 480px) {
  .section--about {
    font-size: .5rem;
    .devices {
      padding-top: 1rem;
      .device {
        width: 50%;
        padding: 0 3em;
        h4 {
          margin-top: .5em;
          font-size: 1.4em;
        }
      }
      svg {
        height: auto;
        width: 100%;
      }
    }
  }

  .section {
    overflow: hidden;

    .wrapper {
      margin-top: 4em;
    }

    p {
      font-size: 1.2em;
      width: 100%;
    }
  }

  .section--about {
    p {
      font-size: 2em;
      width: 80%;
    }
  }

  .section--portfolio {
    .wrapper {
      height: 100%;
      margin-top: 0;
      padding-top: 2em;
      padding-bottom: 2em;
    }
    padding-top: 0;
    h1 {
      height: 100%;
      font-size: 3em;
    }
  }
  .section--obus .wrapper {
    margin-top: 0;
  }


  .pango-logo-group {
    transform: scale(.6);
  }
}
