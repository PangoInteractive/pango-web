// overwrite defaults in sanitize.styl
root-box-sizing = border-box
root-font-family = 'Lato', 'Open Sans', sans-serif
root-color = #333333

@import '../../node_modules/sanitize.css/lib/sanitize.styl'
@import 'nib';

introBg = #292F36;

html, body {
  width: 100%;
  min-height: 100%;
}

body {
  background: #f0f0f0;
}

.absolute-center {
  absolute: top 0 right 0 bottom 0 left 0;
  margin: auto;
}

.section {
  position: relative;
  transform: translateZ(0);
  size: 100% 100vh;
}

.square {
  @extend .absolute-center;
  size: 200px;
  background: #f0f0f0;
  transform: translateZ(0);
  box-shadow: 0 0 0 0 rgba(0,0,0,.4);
}

.line {
  absolute: top 0 left 0;
  width: 100%;
  size: 100% 4px;
  background: introBg;
  &:nth-child(3) {
    top: auto;
    bottom: 0;
  }
  &:nth-child(2), &:nth-child(4) {
    top: 50%;
    left: -50%;
    margin-top: -2px;
    transform: rotate(90deg);
  }
  &:nth-child(2) {
    left: 50%;
  }
}

.square-dark-wrapper {
  @extend .absolute-center;
  size: 0;
  will-change: transform;
  transform: scale(0) translateZ(0);
}
.square-dark {
  background: introBg;
  border-radius: 50%;
  transform: translateZ(0) translateX(-50%) translateY(-50%);
}

.section--intro {
  overflow: hidden;
}

.sparks {
  @extend .absolute-center;
  size: 100px;
}
.spark {
  transform: translateZ(0) rotateZ(45deg);
  absolute: top 0 right -200%;
  will-change: stroke-dashoffset;
  stroke-dasharray: 145;
  stroke-dashoffset: -145;
  &:last-child {
    left: -200%;
    right: auto;
    transform: rotateZ(-135deg);
  }
}

.pango-logo {
  @extend .absolute-center;
  size: 190px;
  z-index: 9;
  //filter: saturate(0);
}
#Mask1 {
  stroke: green;
  stroke-width: 10px;
}
