// overwrite defaults in sanitize.styl
root-box-sizing = border-box
root-font-family = 'Lato', 'Open Sans', sans-serif
root-color = #292F36

@import '../../node_modules/sanitize.css/lib/sanitize.styl'
@import 'nib';

introBg = #292F36;

html, body {
  width: 100%;
  min-height: 100%;
}

body {
  background: #f0f0f0;
  opacity: .9999;
}

.absolute-center {
  absolute: top 0 right 0 bottom 0 left 0;
  margin: auto;
}

.section {
  position: relative;
  size: 100% 100vh;
}

.square-wrapper {
  @extend .absolute-center;
  size: 200px;
  background: #f0f0f0;
}

.line {
  absolute: top 0 left 0;
  width: 100%;
  size: 100% 4px;
  background: introBg;
  &:nth-child(3) {
    top: auto;
    bottom: 0;
  }
  &:nth-child(2), &:nth-child(4) {
    top: 50%;
    left: -50%;
    margin-top: -2px;
    transform: rotate(90deg);
  }
  &:nth-child(2) {
    left: 50%;
  }
}

.square-dark-wrapper {
  @extend .absolute-center;
  size: 0;
  will-change: transform;
  transform: scale(0);
}
.square-dark {
  background: introBg;
  border-radius: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.section--intro {
  overflow: hidden;
}

.sparks {
  @extend .absolute-center;
  size: 100px;
}
.spark {
  transform: rotate(45deg);
  size: 100%;
  absolute: top 0 right -200%;
  will-change: stroke-dashoffset;
  stroke-dasharray: 145;
  stroke-dashoffset: -145;
  &:last-child {
    left: -200%;
    right: auto;
    transform: rotate(-135deg);
  }
}

.pango-logo {
  @extend .absolute-center;
  size: 190px;
  z-index: 15;
  opacity: 0;
  transform: scale(.9);
  //filter: saturate(0);
}

.pango-words {
  size: 190px 120px;
  font-family: 'Lato';
  font-size: 3rem;
  font-weight: 300;
  color: #f0f0f0;
  @extend .absolute-center;
  z-index: 10;
  top: auto;
  bottom: 10%;
  overflow: hidden;
  will-change: opacity;

  .dark-square-cover {
    size: 100% 3.2rem;
    background: introBg;
    absolute: top 3.4rem left 0;
    z-index: 0;
    &:last-of-type {
      height: 1.5rem;
      top: auto;
      bottom: -2px;
    }
  }

  .line-separator {
    size: 90% 2px;
    background: #f0f0f0;
    will-change: transform;
    @extend .absolute-center;
    top: 10%;
  }
}

.pango-word {
  text-align: center;
  display: block;
  z-index: 10;
  span {
    will-change: transform;
    display: inline-block;
  }
  &:last-of-type {
    letter-spacing: 0.11em;
    font-size: 1.4rem;
    font-weight: 100;
    z-index: 12;
  }
}

.outer-logo-circle {
  @extend .absolute-center;
  size: 190px;
  z-index: 14;
  transform-origin: 50% 50%;
  transform: rotate(-90deg) scale(.9);
  .circle {
    transform: translateZ(1px);
    stroke: introBg;
    stroke-dasharray: 2072;
    stroke-dashoffset: 2072;
    stroke-width: 16px;
  }
}

.dot {
  absolute: top 0 left 0;
  background: rgba(255,255,255,.4);
  size: 2px;
  transform: scaleX(0);
  transform-origin: 0 50%;
}

.section--about {
  &:after {
    content: '';
    display: block;
    absolute: top 0 left 0;
    size: 100% 10rem;
    background: introBg;
    z-index: 10;
  }
}
.wrapper {
  width: 960px;
  margin: auto;
}

.about-us {
  relative: top 5rem left 0;
  background: #f0f0f0;
  border-radius: 3px;
  padding: 1.4rem;
  z-index: 14;
  height: 20rem;
  width: 30rem;
  border: 1px solid introBg;
  h1 {
    font-size: 2rem;
    span span {
      will-change: transform;
      display: inline-block;
    }
  }
  p {
    margin-top: 1rem;
    font-size: 1.2rem;
  }
  strong {

  }
}
